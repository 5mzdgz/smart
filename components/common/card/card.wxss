/* components/common/card/card.wxss */
.card {
  padding: 20rpx 40rpx;
  border-bottom: 1px solid #eee;
}

.img-box {
  width: 100%;
  height: 300rpx;
  overflow: hidden;
  background: primary;
}

.img-box image {
  width: 100%;
  height: 100%;
}

.text {
  margin: 20rpx 0;
  font-size: 26rpx;
}

.cell {
  justify-content: space-between;
  font-size: 26rpx;
}

.left-cell image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 100%;
  background: primary;
}

.left-cell .user-name {
  max-width: 200rpx;
  padding: 0 20rpx;
}

.right-cell .iconfont {
  font-size: 26rpx;
  margin-right: 5rpx;
}