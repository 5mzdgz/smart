/* components/mine/mine-user/mine-user.wxss */
.user {
  justify-content: space-between;
  padding: 50rpx 30rpx 70rpx 30rpx;
  background: #4E89FC;
  color: #fff;
}

.img-box {
  width: 120rpx;
  height: 120rpx; 
  border-radius: 100%;
  background: #fff;
  margin-right: 30rpx;
  overflow: hidden;
}

.img-box image {
  width: 100%;
  height: 100%;
}

.middle {
  width: 75%;
}

.middle .user-name {
  font-size: 30rpx;
  font-weight: bold;
}

.middle .autograph {
  font-size: 26rpx;
}